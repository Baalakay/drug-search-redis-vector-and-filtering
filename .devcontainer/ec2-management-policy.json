{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EC2LaunchTemplateManagement",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeLaunchTemplates",
                "ec2:DescribeLaunchTemplateVersions",
                "ec2:CreateLaunchTemplateVersion",
                "ec2:ModifyLaunchTemplate",
                "ec2:DescribeInstances",
                "ec2:DescribeImages",
                "ec2:DescribeSecurityGroups",
                "ec2:DescribeSubnets",
                "ec2:DescribeVpcs"
            ],
            "Resource": "*"
        },
        {
            "Sid": "SSMParameterManagement", 
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter",
                "ssm:GetParameters",
                "ssm:PutParameter",
                "ssm:DescribeParameters"
            ],
            "Resource": [
                "arn:aws:ssm:*:*:parameter/devcontainer/*",
                "arn:aws:ssm:*:*:parameter/devcontainer/ssh-keys/*"
            ]
        },
        {
            "Sid": "IAMRoleManagement",
            "Effect": "Allow", 
            "Action": [
                "iam:GetRole",
                "iam:ListRolePolicies",
                "iam:ListAttachedRolePolicies",
                "iam:AttachRolePolicy",
                "iam:CreatePolicy",
                "iam:GetPolicy",
                "iam:ListPolicyVersions"
            ],
            "Resource": [
                "arn:aws:iam::*:role/ecsInstanceRole",
                "arn:aws:iam::*:policy/DevcontainerManagement*"
            ]
        }
    ]
}
